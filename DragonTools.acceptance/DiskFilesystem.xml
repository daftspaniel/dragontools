  <WriteFileRawTests>
    
    <!-- DragonDos -->
    <WriteFileRaw>
      <diskimage>dragondos-tunes.vdk</diskimage>
      <filesystem>dragondos</filesystem>
      <writeprotected>false</writeprotected>
      <filename>FOO.BAR</filename>
      <length>5000</length>
      <exception/>
    </WriteFileRaw>

    <WriteFileRaw>
      <description>Filesystem is write protected</description>
      <diskimage>dragondos-tunes.vdk</diskimage>
      <filesystem>dragondos</filesystem>
      <writeprotected>true</writeprotected>
      <filename>FOO.BAR</filename>
      <length>5000</length>
      <exception>RolfMichelsen.Dragon.DragonTools.IO.FilesystemNotWriteableException</exception>
    </WriteFileRaw>

    <WriteFileRaw>
      <description>Invalid (too long) target filename</description>
      <diskimage>dragondos-tunes.vdk</diskimage>
      <filesystem>dragondos</filesystem>
      <writeprotected>false</writeprotected>
      <filename>FOOBARFOO.BAR</filename>
      <length>5000</length>
      <exception>RolfMichelsen.Dragon.DragonTools.IO.InvalidFilenameException</exception>
    </WriteFileRaw>

    <WriteFileRaw>
      <description>Target filename already in use</description>
      <diskimage>dragondos-tunes.vdk</diskimage>
      <filesystem>dragondos</filesystem>
      <writeprotected>false</writeprotected>
      <filename>DANCER.BIN</filename>
      <length>5000</length>
      <exception>RolfMichelsen.Dragon.DragonTools.IO.Disk.FileExistsException</exception>
