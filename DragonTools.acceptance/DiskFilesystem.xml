    </FileExists>

    <FileExists>
      <diskimage>os9-system.vdk</diskimage>
      <filesystem>os9</filesystem>
      <file>startup</file>
      <exists>true</exists>
    </FileExists>
    
    
    <!-- FLEX -->
    <FileExists>
      <diskimage>flex-system.vdk</diskimage>
      <filesystem>flex</filesystem>
      <file>FLEX.SYS</file>
