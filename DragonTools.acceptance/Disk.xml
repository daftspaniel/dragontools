<?xml version="1.0" encoding="utf-8" ?>

<TestVectors>

  <!-- Tests that the Disk.Open function can decode all valid disk geometries. -->
  <DiskGeometryTests>

    <!-- JVC disks -->
    <DiskGeometry>
      <file>80t_18spt_256bps_2s.dsk</file>
      <class>RolfMichelsen.Dragon.DragonTools.IO.Disk.JvcDisk</class>
      <heads>2</heads>
      <tracks>80</tracks>
    </DiskGeometry>

    <DiskGeometry>
      <file>128t_255spt_256bps_2s.dsk</file>
      <class>RolfMichelsen.Dragon.DragonTools.IO.Disk.JvcDisk</class>
      <heads>2</heads>
      <tracks>128</tracks>
    </DiskGeometry>
    
    <DiskGeometry>
      <file>40t_255spt_256bps_2s.dsk</file>
      <class>RolfMichelsen.Dragon.DragonTools.IO.Disk.JvcDisk</class>
      <heads>2</heads>
      <tracks>40</tracks>
    </DiskGeometry>

    <DiskGeometry>
      <file>80t_18spt_1024bps_2s.dsk</file>
      <class>RolfMichelsen.Dragon.DragonTools.IO.Disk.JvcDisk</class>
      <heads>2</heads>
      <tracks>80</tracks>
    </DiskGeometry>

    <!-- VDK disks -->
    <DiskGeometry>
      <file>40t_18spt_256bps_2s.vdk</file>
      <class>RolfMichelsen.Dragon.DragonTools.IO.Disk.VdkDisk</class>
      <heads>2</heads>
      <tracks>40</tracks>
    </DiskGeometry>

    <DiskGeometry>
      <file>40t_18spt_256bps_1s.vdk</file>
      <class>RolfMichelsen.Dragon.DragonTools.IO.Disk.VdkDisk</class>
      <heads>1</heads>
      <tracks>40</tracks>
    </DiskGeometry>

    <DiskGeometry>
      <file>80t_18spt_256bps_2s.vdk</file>
      <class>RolfMichelsen.Dragon.DragonTools.IO.Disk.VdkDisk</class>
      <heads>2</heads>
      <tracks>80</tracks>
    </DiskGeometry>
    
    <DiskGeometry>
      <file>80t_18spt_256bps_1s.vdk</file>
      <class>RolfMichelsen.Dragon.DragonTools.IO.Disk.VdkDisk</class>
      <heads>1</heads>
      <tracks>80</tracks>
    </DiskGeometry>

  </DiskGeometryTests>

  <!-- Tests that sector data can be correctly read. -->
  <ReadSectorTests>

    <ReadSector>
      <file>dragondos-tunes.vdk</file>
      <head>0</head>
      <track>0</track>
      <sector>1</sector>
      <data>55 02 0c 00 44 de 3c 00 aa 55 55 55 55 55 55 55 55 55 55 55 55 55 55 55</data>
    </ReadSector>

    <ReadSector>
      <file>dragondos-tunes.vdk</file>
      <head>0</head>
      <track>21</track>
      <sector>6</sector>
      <data>22 20 bf 20 38 36 30 00 35 12 03 66 85 20 49 24 cb 22 31 22 20 bf 20 39 30 30 00</data>
    </ReadSector>


  </ReadSectorTests>
  
</TestVectors>

 